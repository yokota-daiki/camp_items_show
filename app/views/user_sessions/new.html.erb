<% content_for(:title, t(".title")) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name('email') %>
          <%= f.email_field :email, class: "form-control" %> 
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name('password') %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, User.human_attribute_name('password_confirmation') %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <%= f.submit (t "defaults.login"), class: "btn btn-info rounded-pill" %>
        <%= link_to 'パスワードを忘れた方はこちら', new_password_reset_path, class: 'float-right' %>
      <% end %>
      <%= link_to 'ユーザー登録はこちら', new_user_path, class: 'float-right' %>
    </div>
  </div>
</div>