<% content_for(:title, t(".title")) %>
<% set_meta_tags noindex: true %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-4">
      <h1><%= t '.title' %></h1>
      <%= form_with model: [:admin, @user], local: true do |f| %>
        <%= render "shared/error_message", object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :role %>
          <%= f.select :role, User.roles_i18n.invert.map{ |role| role }, class: "form-control" %>
        </div>
        <%= f.submit (t "defaults.change"), class: "btn btn-info rounded-pill float-right mb-4" %>
      <% end %>
      <div class='text-center'>
      </div>
    </div>
  </div>
</div>