<div class="col-lg-3">
  <div class="card border-dark mb-3" style="width: 100%; height:550px;">
    <% if post.images.present? && post.images.many? %>
      <div class="swiper" style="height: 60%;">
        <div class="swiper-wrapper">
          <% post.images.each do |image| %>
            <div class="swiper-slide">
              <%= image_tag image, class: "card-img-top card border-dark", style: 'height: 100%;' %>
            </div>
          <% end %>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
    <% elsif post.images.present? && post.images.one? %>
      <%= image_tag post.images[0], class: "card-img-top card border-dark", style: 'height: 60%;' %>
    <% else %>
      <%= image_tag 'default_campimage.JPG', class: 'card-img-top card border-dark', style: 'height: 60%;' %>
    <% end %>
    <div class="card-body">
      <div class="card-title"><strong><%= post.camp_field %></strong></div>
      <p class="card-text">
        <% if post.comment.present? && post.comment_over? %>
          <%= post.comment %>
        <% end %>
      </p>
    </div>
    <div class="card-footer" style="height: 50px;">
      <div class="float-left">
        <p><small><%= post.user.name %></small></p>
      </div>
      <div class="float-right">
        <div class="d-flex lex-row mb-3">
          <div class="p-2">
            <p"><small class="text-muted"><%= post.camped_date %></small></p>
          </div>
          <div class="p-2">
            <%= link_to admin_post_path(post), method: :delete, data: { confirm: t('defaults.message.delete')} do %>
              <i class="fa-solid fa-trash-can"></i>          
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>