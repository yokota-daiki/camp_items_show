<div class="content-header">
  <div class="container-fluid">
    <div class="text-center">
      <h1><%= t '.title' %></h1>
      <%= button_to "キャンプの記録を投稿する", new_post_path, method: :get, class: "btn btn-info rounded-pill", style: "width: 300px" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
      <%= render partial: 'post', collection: @posts %>
  </div>
</div>
<div id="mask" class="hidden"></div>
<div id="modal" class="hidden">
    <p>モーダルウィンドウ</p>
</div>

<style>

.overlay {
  position: fixed;
  inset: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 50;
}

#mask {
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1;
}

#modal {
  position: fixed;  
  top: 10vh;
  /* 以下3行：モーダルを左右中央揃えにする方法 */
  left: 0;
  right: 0;
  margin: 0 auto;
  transform: translate(0, 0) scale(1);
  transition: 0.2s;   /* transitionでアニメーションを作成 */
  z-index: 2;   /* マスクより上に重なるようにする */
  width: 80%;   /* showビューの幅に合わせて設定 */
  height: 70%;
  overflow: scroll;
}

#mask.hidden {
  opacity: 0;
  visibility: hidden;
}

#modal.hidden {
  opacity: 0;
  visibility: hidden;
  transform: translate(0, 0) scale(0.8);   /* 大きさ0.8倍から等倍にモーダルが拡大される */
}
</style>