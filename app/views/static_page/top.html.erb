<div class="content-header" id="top-page">
  <div class="text-center"  style="margin-top: 35px; color: black;">
    <h1>あなたのキャンプをより快適に</h1>
    <% unless logged_in? %>
      <%= link_to "ユーザー登録をする", new_user_path%>
    <% end %>
  </div>
  <div class="d-flex justify-content-md-around flex-wrap"  style="margin-top: 35px;">
    <%= link_to search_camps_path do %>
      <div class="btn" style="color: black; margin: 10px; padding: 10px;">
        <%= image_tag 'map1.png', style: 'height: 50%; width: 50%' %>
        <h4>キャンプ場検索</h4>
      </div>
    <% end %>
    <%= link_to items_path do %>
      <div class="btn" style="color: black; margin: 10px; padding: 10px;">
        <%= image_tag 'backpack1.png', style: 'height: 50%; width: 50%' %>
        <h4>アイテム管理</h4>
      </div>
    <% end %>
    <%= link_to posts_path do %>
      <div class="btn" style="color: black; margin: 10px; padding: 10px;">
        <%= image_tag 'camping.png', style: 'height: 50%; width: 50%' %>
        <h4>キャンプ記録</h4>
      </div>
    <% end %>
    <%= link_to checklists_path do %>
      <div class="btn" style="color: black; margin: 10px; padding: 10px;">
        <%= image_tag 'checklist1.png', style: 'height: 50%; width: 50%' %>
        <h4>チェックリスト</h4>
      </div>
    <% end %>
  </div>
  <div class="container-fluid">
    <div class="text-center">
      <div class="btn btn-info" id="open-btn">みんなのキャンプを覗いてみる</div>
    </div>
  </div>
  <div id="camp-images"></div>
</div>
<script>
$("#open-btn").on('click', function(){
  $('#camp-images').html('<%= escape_javascript(render partial: 'more_view', locals: { posts: @posts }) %>');
  $('#open-btn').remove();
});
</script>



